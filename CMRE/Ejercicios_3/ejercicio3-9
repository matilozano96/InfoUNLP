programa Ejercicio3-9
procesos
  proceso limpiarEsquina(ES f: numero; ES seguir: boolean)
  variables
    x:numero
    y:numero
  comenzar
    x:= PosAv
    y:= PosCa
    BloquearEsquina(15,23)
    Pos(15,23)
    si HayFlorEnLaEsquina
      tomarFlor
      f := f+1
    seguir:= HayFlorEnLaEsquina
    Pos(x,y)
    LiberarEsquina(15,23)
  fin
areas
  ciudadC : AreaC(15,23,15,23)
  area1 : AreaP(9,9,9,9)
  area2 : AreaP(11,9,11,9)
  area3 : AreaP(13,9,13,9)
  areaJ : AreaP(1,1,1,1)
robots 
  robot tipo1
  variables
    seguir: boolean
    f: numero
    id: numero
    num: numero
    temp: boolean
  comenzar
    RecibirMensaje(id, robotJefe)
    seguir := V
    mientras (seguir)
      RecibirMensaje(num, robotJefe)
      si (num = id) 
        limpiarEsquina(f, temp)
        EnviarMensaje(temp, robotJefe)
      RecibirMensaje(seguir, robotJefe)
  fin
  
  robot tipoJefe
  variables
    seguir: boolean
    id: numero
  comenzar
    EnviarMensaje(1, robot1)
    EnviarMensaje(2, robot2)
    EnviarMensaje(3, robot3)
    seguir := V
    mientras (seguir)
      Random(id, 1, 3)
      EnviarMensaje(id, robot1)
      EnviarMensaje(id, robot2)
      EnviarMensaje(id, robot3)
      RecibirMensaje(seguir, *)
      EnviarMensaje(seguir, robot1)
      EnviarMensaje(seguir, robot2)
      EnviarMensaje(seguir, robot3)
    Informar(V)
  fin

variables 
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
  robotJefe: tipoJefe
  
comenzar 
  AsignarArea(robot1,ciudadC)
  AsignarArea(robot2,ciudadC)
  AsignarArea(robot3, ciudadC)
  AsignarArea(robotJefe, areaJ)
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  Iniciar(robot1, 9, 9)
  Iniciar(robot2, 11, 9) 
  Iniciar(robot3, 13,9)
  Iniciar(robotJefe, 1,1)
fin




























