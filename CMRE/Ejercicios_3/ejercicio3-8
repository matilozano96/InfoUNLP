programa Ejercicio3-8
areas
  areaFin : AreaC(20,20,20,20)
  ciudadC : AreaC(15,23,15,23)
  area1 : AreaP(9,9,9,9)
  area2 : AreaP(11,9,11,9)
  area3 : AreaP(13,9,13,9)
  areaJ : AreaP(1,1,1,1)
robots 
  robot tipo1
  variables
    x: numero
    y: numero
    seguir: boolean
    f: numero
    id: numero
  comenzar
    RecibirMensaje(id, robotJefe)
    x := PosAv
    y := PosCa
    seguir := V
    mientras (seguir)
      BloquearEsquina(15,23)
      Pos(15,23)
      si HayFlorEnLaEsquina
        tomarFlor
        f := f+1
      seguir := HayFlorEnLaEsquina
      Pos(x,y)
      LiberarEsquina(15,23)
    EnviarMensaje(id, robotJefe)
    EnviarMensaje(f, robotJefe)
    RecibirMensaje(seguir, robotJefe)
    si (seguir)
      Pos(20,20)
      mientras (HayFlorEnLaBolsa)
        depositarFlor
      Informar(V)
  fin
  
  robot tipoJefe
  variables
    flo : numero
    max: numero
    id: numero
    idMax: numero
  comenzar
    EnviarMensaje(1, robot1)
    EnviarMensaje(2, robot2)
    EnviarMensaje(3, robot3)
    idMax:= 0
    max := 0
    repetir 3
      RecibirMensaje(id, *)
      si (id = 1)
        RecibirMensaje(flo, robot1)
      si (id = 2)
        RecibirMensaje(flo, robot2)
      si (id = 3)
        RecibirMensaje(flo, robot3)
      si (flo > max)
        max:= flo
        idMax:= id
      si (idMax = 1)
        EnviarMensaje(V, robot1)
      sino 
        EnviarMensaje(F, robot1)
      si (idMax = 2)
        EnviarMensaje(V, robot2)
      sino 
        EnviarMensaje(F, robot2)
      si (idMax = 3)
        EnviarMensaje(V, robot3)
      sino 
        EnviarMensaje(F, robot3)
  fin

variables 
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
  robotJefe: tipoJefe
  
comenzar 
  AsignarArea(robot1,ciudadC)
  AsignarArea(robot2,ciudadC)
  AsignarArea(robot3, ciudadC)
  AsignarArea(robot1,areaFin)
  AsignarArea(robot2,areaFin)
  AsignarArea(robot3,areaFin)
  AsignarArea(robotJefe, areaJ)
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  Iniciar(robot1, 9, 9)
  Iniciar(robot2, 11, 9) 
  Iniciar(robot3, 13,9)
  Iniciar(robotJefe, 1,1)
fin















