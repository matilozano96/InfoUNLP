    mover
    Pos (20,20)
    Pos(40,40)
  fin
  robot tipo2
  comenzar
    repetir 5
      mover
    Pos(20,20)
  fin
     
variables 
  robot1: tipo1
  robot2: tipo2 
comenzar 
